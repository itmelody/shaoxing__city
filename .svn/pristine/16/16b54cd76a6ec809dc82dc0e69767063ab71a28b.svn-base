.overlay {
  width: 100%;
  height: 110px;
  background-image: linear-gradient(45deg, #2c62e6, #4eb5f0);
  background-blend-mode: normal, normal;
  position: absolute;
  z-index: -1;
}

.header {
  color: #ffffff;
  font-size: 14px;
  .title {
    font-size: 18px;
    letter-spacing: 1px;
    color: #ffffff;
  }
}

.title {
  text-align: center;
}

.user-info {
  text-align: right;
}

.swipe {
  border-radius: 12px;
}

.temperature {
  font-size: 32px;
  color: #333333;
}

.flex-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.situation {
  font-size: 12px;
  color: #4d4d4d;
}

.date {
  font-size: 12px;
  color: #4d4d4d;
}
